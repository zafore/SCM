{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "SecretKey": "ThisIsAStrongSecretKeyForYourJWTTokenGeneration!PleaseChangeMeInProduction", // MUST match IdentityService's SecretKey
    "Issuer": "http://localhost:5001", // Identity Service is the issuer
    "Audience": "SupplyChainAppClients" // Audience of the token
  },
  "ServiceUrls": {
    "OffersMicroservice": "http://localhost:5004" // URL for the Offers Microservice
  }
}